# Server Configuration
PORT=3001
NODE_ENV=development
API_PREFIX=/api

# EdgeDB Configuration
EDGEDB_DSN=edgedb://localhost:5656/twitter_scraper

# Twitter Scraper Configuration
TWITTER_USERNAME=prismcollect_
TWITTER_BASE_URL=https://x.com

# Browser Configuration
BROWSER_HEADLESS=false
BROWSER_USER_DATA_DIR=./browser-data
BROWSER_TIMEOUT=30000

# Scraping Configuration
SCRAPE_INTERVAL_MINUTES=30
SCRAPE_DELAY_MIN=2000
SCRAPE_DELAY_MAX=5000
MAX_TWEETS_PER_SESSION=100
MAX_RETRIES=3

# Security
CORS_ORIGIN=http://localhost:4300
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/scraper.log

# Japan Time Zone for Scheduling
TIMEZONE=Asia/Tokyo
DAILY_SCRAPE_TIME=09:00