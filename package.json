{
  "name": "phantasia",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --port 4300",
    "build": "ng build --configuration production",
    "build:analyze": "ng build --configuration production --stats-json && npx webpack-bundle-analyzer dist/phantasia/stats.json",
    "build:fast": "ng build --configuration production --optimization=false",
    "build:max": "ng build --configuration production --optimization=true --aot=true --build-optimizer=true --vendor-chunk=true --source-map=false --extract-licenses=true",
    "build:deploy": "pnpm run build:max && ./deploy_optimized.sh",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "preload": "ng build --configuration production --named-chunks --output-hashing=all"
  },
  "packageManager": "pnpm@10.15.0",
  "private": true,
