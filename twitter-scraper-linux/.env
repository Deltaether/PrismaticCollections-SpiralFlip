# Twitter Scraper Configuration
TWITTER_USERNAME=prismcollect_
TWITTER_BASE_URL=https://x.com

# Browser Configuration
BROWSER_HEADLESS=false
BROWSER_USER_DATA_DIR=./browser-data
BROWSER_TIMEOUT=45000

# Scraping Configuration - Enhanced for comprehensive collection with heavy rate limiting
SCRAPE_INTERVAL_HOURS=24
SCRAPE_DELAY_MIN=180000  # 3 minutes
SCRAPE_DELAY_MAX=210000  # 3.5 minutes
TWEET_DELAY_MIN=10000    # 10 seconds additional delay
TWEET_DELAY_MAX=30000    # 30 seconds additional delay
MAX_TWEETS_PER_SESSION=5000
MAX_RETRIES=5

# Anti-scraping protection settings
SCROLL_DELAY_MIN=1500
SCROLL_DELAY_MAX=4000
HUMAN_LIKE_DELAYS=true
RANDOM_SCROLL_PATTERNS=true

# Japan Time Zone for Scheduling
TIMEZONE=Asia/Tokyo
DAILY_SCRAPE_TIME=09:00

# EdgeDB Configuration
EDGEDB_INSTANCE=twitter_scraper
USE_MOCK_DB=false

# Logging
LOG_LEVEL=INFO